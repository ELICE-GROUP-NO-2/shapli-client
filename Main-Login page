    <script>
        // 메뉴 바 표시/숨김 처리
        document.addEventListener('mousemove', function(event) {
            const menuBar = document.getElementById('menuBar');
            if (event.clientY < 100) { // 마우스가 화면 상단 100px 이내로 이동할 경우
                menuBar.style.top = '0';
            } else {
                menuBar.style.top = '-100px';
            }
        });
    </script>
